pkgname=wslog
pkgver=0.8.3
pkgrel=1
pkgdesc="Weather station logger"
arch=('x86_64')
url=""
license=('GPL3')
source=("$pkgname-$pkgver.tar.gz"
	'wslogd.service')
sha1sums=('3badaecb1673c279f6f633877300db1be72f646d')
depends=('sqlite' 'curl')

backup=('etc/wslogd.conf')

build() {
  cd "$pkgname-$pkgver"
  ./configure --prefix=/usr --sysconfdir=/etc --disable-wsview --enable-simu
  make
}

package() {
  cd "$pkgname-$pkgver"
  make DESTDIR="$pkgdir" install
  install -Dm0644 "$srcdir"/wslogd.service "$pkgdir"/usr/lib/systemd/system/wslogd.service
}

check() {
  cd "$pkgname-$pkgver"
#  make tests
}

